---
import MainLayout from '@layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

const title = '首页 | 个人技术博客-bigroc';
const description = '分享技术文章与开发心得，涵盖Java、JavaScript、Go、数据库、Docker等领域。原创技术博客，持续更新，有价值的内容。';

const posts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 10);
---

<MainLayout title={title} description={description}>
  <section class="text-center mb-16">
    <h1 class="text-5xl font-bold mb-4">欢迎来到我的博客</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 mb-4">分享技术、记录成长</p>
    <p class="text-base text-gray-500 dark:text-gray-500 max-w-2xl mx-auto">
      这里有关于 Java、JavaScript、Go、数据库、Docker 等技术领域的原创文章，
      记录了我从 2017 年至今的技术学习和实践经验。
      希望这些内容能帮助到你！
    </p>
  </section>

  <section>
    <h2 class="text-3xl font-bold mb-8">最新文章</h2>
    {posts.length === 0 ? (
      <div class="space-y-6">
        <p class="text-gray-600 dark:text-gray-400">正在同步文章中...</p>
        <p class="text-sm text-gray-500 dark:text-gray-500">运行 <code class="px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded">npm run sync</code> 同步博客文章</p>
      </div>
    ) : (
      <div class="space-y-8">
        {posts.map((post) => (
          <article class="border-b border-gray-200 dark:border-gray-800 pb-8 last:border-0">
            <h3 class="text-2xl font-bold mb-2">
              <a href={`/posts/${post.id.replace('.md', '')}`} class="text-primary-600 dark:text-primary-400 hover:underline">
                {post.data.title}
              </a>
            </h3>
            <div class="flex gap-4 text-sm text-gray-600 dark:text-gray-400 mb-3">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('zh-CN', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              {post.data.tags.length > 0 && (
                <div class="flex gap-2">
                  {post.data.tags.slice(0, 3).map(tag => (
                    <span class="px-2 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded text-xs">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
            <p class="text-gray-700 dark:text-gray-300 mb-3">{post.data.summary}</p>
            <a href={`/posts/${post.id.replace('.md', '')}`} class="text-primary-600 dark:text-primary-400 hover:underline text-sm">
              阅读全文 →
            </a>
          </article>
        ))}
      </div>
    )}
  </section>
</MainLayout>
